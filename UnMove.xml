<?xml version="1.0"?>
<Container version="2">
  <Name>unmove</Name>
  <Repository>yusseiin/unmove:latest</Repository>
  <Registry>https://hub.docker.com/r/yusseiin/unmove</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/yusseiin/unmove</Support>
  <Project>https://github.com/yusseiin/unmove</Project>
  <Overview>File transfer application with TVDB integration for organizing media files. Identify TV series and movies, rename them properly, and move them to your media library.</Overview>
  <Category>MediaApp:Other</Category>
  <WebUI>http://[IP]:[PORT:3213]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/yusseiin/unraid-templates/main/img/unmove.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="3000" Default="3213" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">3213</Config>
  <Config Name="Downloads Path" Target="/downloads" Default="/mnt/user/downloads" Mode="rw" Description="Path to your downloads folder" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/downloads</Config>
  <Config Name="Media Path" Target="/media" Default="/mnt/user/media" Mode="rw" Description="Path to your media library folder" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="Config Path" Target="/config" Default="/mnt/user/appdata/unmove" Mode="rw" Description="Path to store application config" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/unmove</Config>
  <Config Name="DOWNLOAD_PATH" Target="DOWNLOAD_PATH" Default="/downloads" Mode="" Description="Internal downloads path (don't change)" Type="Variable" Display="advanced" Required="true" Mask="false">/downloads</Config>
  <Config Name="MEDIA_PATH" Target="MEDIA_PATH" Default="/media" Mode="" Description="Internal media path (don't change)" Type="Variable" Display="advanced" Required="true" Mask="false">/media</Config>
  <Config Name="CONFIG_PATH" Target="CONFIG_PATH" Default="/config" Mode="" Description="Internal config path (don't change)" Type="Variable" Display="advanced" Required="true" Mask="false">/config</Config>
  <Config Name="TVDB API Key" Target="TVDB_API_KEY" Default="" Mode="" Description="Your TVDB API key (get one at https://thetvdb.com/api-information)" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
</Container>
